<%= form_with(model: manga) do |form| %>
  <div>
    <%= form.label :external_id, style: "display: block" %>
    <%= form.text_field :external_id, required: true %>
  </div>

  <div>
    <%= form.label :source, style: "display: block" %>
    <%= form.collection_select :source, Manga::SOURCES.keys.sort, :to_s, :to_s, {include_blank: false} %>
  </div>

  <div>
    <%= form.label :notifier_ids, style: "display: block" %>
    <%= form.collection_select :notifier_ids, Notifier.all, :id, :name, {}, { multiple: true } %>
  </div>

  <div>
    <%= form.label :active, style: "display: block" %>
    <%= form.check_box :active, checked: manga.active? %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
