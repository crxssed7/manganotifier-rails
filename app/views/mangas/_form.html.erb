<%= form_with(model: manga) do |form| %>
  <div>
    <%= form.label :external_id, style: "display: block" %>
    <%= form.text_field :external_id, required: true %>
  </div>

  <div>
    <%= form.label :source, style: "display: block" %>
    <%= form.collection_select :source, Manga::SOURCES.keys, :to_s, :to_s, {include_blank: false} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
